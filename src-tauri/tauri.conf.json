{
  "productName": "SSH Terminal",
  "version": "0.1.0",
  "identifier": "com.sshterminal.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../src-ui"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",

    "longDescription": "A secure, cross-platform SSH terminal application with tabbed interface, session management, and customizable themes.",
    "shortDescription": "SSH Terminal Application",
    "targets": "all",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data:; connect-src 'self' ws: wss: https://vault.spotlessbinco.com;"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "SSH Terminal",
        "width": 1100,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "decorations": true
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": false
    }
  }
}
